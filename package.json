{
  "name": "quick-house-hub",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "build": "turbo run build",
    "build:all": "turbo run build --force",
    "dev": "turbo run dev",
    "dev:local": "turbo run dev --filter=!@quick-house-hub/ui --filter=!@quick-house-hub/utils",
    "lint": "turbo run lint",
    "lint:ox": "oxlint .",
    "lint:ox:fix": "oxlint --fix .",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check": "oxlint . && turbo run lint"
  },
  "devDependencies": {
    "oxlint": "^1.46.0",
    "prettier": "^3.2.5",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.0.0"
}
